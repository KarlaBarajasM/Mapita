<p id="notice"><%= notice %></p>

<h1><img src="http://img.freepik.com/vector-gratis/mapamundi-verde_1035-6409.jpg?size=338&ext=jpg" class="wpcs-thum" alt="Mapa Mundi" height="100px" width="100px">MapaMundi</h1>
<br>
<table>
  <thead>
    <tr>
      <th>Latitud</th>
      <th>Longitud</th>
      <th>Dirección</th>
      <th>Descripción</th>
      <th>Título</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= location.address %></td>
        <td><%= location.description %></td>
        <td><%= location.title %></td>
        <td><%= link_to 'Mostrar', location %></td>
        <td><%= link_to 'Editar', edit_location_path(location) %></td>
        <td><%= link_to 'Eliminar', location, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Dirección', new_location_path %>
<br>
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
<div align=center>
<script type="text/javascript">
 handler = Gmaps.build('Google');
 handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  }); 
</script>
</div>
